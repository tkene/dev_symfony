{% extends 'base.html.twig' %}

{% block title %}Personnages
{% endblock %}

{% block monTitre %}Liste des personnages
{% endblock %}

{% block body %}

	<table class="table">
		<tr class="thead-dark">
			<th>Image</th>
			<th>Nom</th>
			<th>Age</th>
			<th>Sexe</th>
			<th>Force</th>
			<th>Agilité</th>
			<th>Intelligence</th>
		</tr>

		{% for player in players %}
			<tr>
				<td>
					<img src="{{asset('images/personnages/'~player.nom~'.png')}}">
				</td>
				<td>
					<!--  |lower = permet de mettre en miniscule les caractére majuscule pour la lecture dans l'url -->
					<a href="{{ path('afficher_personnage',{'nom' : player.nom|lower}) }}">{{player.nom}}</a>
				</td>
				<td>
					{{player.age}}
				</td>
				<td>
					{% if player.sexe %}
						Homme
					{% else %}
						Femme
					{% endif %}

				</td>
				<td>
					{{player.carac.force}}
				</td>
				<td>
					{{player.carac.agil}}
				</td>
				<td>
					{{player.carac.intelligence}}
				</td>
			</tr>
		</tr>
	{% endfor %}
</table>{% endblock %}
